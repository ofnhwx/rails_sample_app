- provide :title, 'Edit user'
- provide :form_url, user_path(@user)
- provide :button_text, 'Save changes'
%h1 Update your profile

.row
  .col-md-6.col-md-offset-3
    = form_for(@user) do |f|
      = render 'form'
    .gravatar_edit
      = gravatar_for @user
      = link_to 'change', 'http://gravatar.com/emails', target: :_blank, rel: :noopener
